{
  "name": "codefyphp/codefy",
  "type": "library",
  "description": "Libraries and Interfaces for domain driven design.",
  "keywords": [
    "ddd",
    "domaindrivendesign",
    "cqrs",
    "eventsourcing",
    "eventbus",
    "commandbus",
    "eventstore",
    "aggregateroot",
    "domainevents"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Joshua Parker",
      "email": "josh@joshuaparker.blog"
    }
  ],
  "require": {
    "php": ">=8.1",
    "qubus/event-dispatcher": "^2.0",
    "qubus/exception": "^2.0",
    "qubus/injector": "^2.2",
    "qubus/valueobjects": "^2.0"
  },
  "require-dev": {
    "laminas/laminas-coding-standard": "^2.0",
    "mockery/mockery": "^1.3.1",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-mock": "^1.0",
    "phpunit/phpunit": "^9.0",
    "qubus/cache": "^2.0",
    "qubus/log": "^2.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Codefy\\": ""
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Codefy\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "XDEBUG_MODE=coverage vendor/bin/pest --coverage --min=90 --colors=always",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  }
}
